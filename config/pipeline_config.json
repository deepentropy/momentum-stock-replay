{
  "description": "Configuration for momentum stock screener pipeline",
  "updated": "2025-11-15",

  "fundamental_filters": {
    "max_shares_float": 100000000,
    "max_market_cap": 300000000,
    "min_price": 1.0,
    "max_price": 100.0,
    "description": "Stage 1: Filter stocks by fundamentals"
  },

  "momentum_filters": {
    "min_runup_percent": 25.0,
    "premarket_hours": [4, 5, 6, 7, 8, 9],
    "regular_hours": [9, 10, 11, 12, 13, 14, 15],
    "postmarket_hours": [16, 17, 18, 19, 20],
    "description": "Stage 2: Filter by intraday momentum (premarket open to highest high)"
  },

  "databento": {
    "dataset": "XNAS.ITCH",
    "schema_hourly": "ohlcv-1h",
    "schema_second": "ohlcv-1s",
    "max_symbols_stage2": 500,
    "max_symbols_stage3": 100,
    "description": "Databento API settings"
  },

  "github": {
    "repo_owner": "deepentropy",
    "repo_name": "stockfundamentals",
    "data_path": "data",
    "fundamentals_file": "fundamentals.json",
    "description": "Private GitHub repository settings"
  },

  "pipeline": {
    "enable_stage1": true,
    "enable_stage2": true,
    "enable_stage3": true,
    "cost_limit_warning": 15.0,
    "description": "Pipeline execution control"
  }
}
